<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.my.MyIntegralActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_240"
        android:background="@mipmap/group"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_my_integral_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_60"
            android:layout_marginBottom="@dimen/dp_20"
            android:textSize="@dimen/dp_36"
            android:textColor="#fff"
            android:text="1200" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_10"
            android:gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp_10"
            android:textColor="#fff"
            android:text="可用积分" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp_10"
            android:textSize="@dimen/sp_10"
            android:textColor="#fff"
            android:text="最近修改时间" />
        <TextView
            android:id="@+id/tv_my_integral_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="@dimen/sp_10"
            android:textColor="#fff"
            android:text="2020年5月3日15:55:20" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_my_Integral_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_40"
        android:padding="@dimen/dp_10"/>

</LinearLayout>