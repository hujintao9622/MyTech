<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2f2"
    tools:context=".view.activity.information.TieziActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:textSize="@dimen/dp_20"
        android:textColor="#666666"
        android:gravity="center"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="我的帖子"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_50"
        android:id="@+id/rv_my_tiezi"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/my_post_del"
        android:visibility="gone"
        android:background="@color/colorWhite"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_52"
            android:textSize="@dimen/dp_12"
            android:text="确认删除该条帖子"
            android:gravity="center"
            android:textColor="#999999"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_1"
            android:background="#999999"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_52"
            android:textSize="@dimen/dp_20"
            android:text="确认"
            android:id="@+id/my_post_ok"
            android:layout_marginBottom="@dimen/dp_10"
            android:gravity="center"
            android:textColor="#ff5757"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_52"
            android:textSize="@dimen/dp_20"
            android:text="取消"
            android:id="@+id/my_post_no"
            android:gravity="center"
            android:textColor="#333333"/>
    </LinearLayout>
</RelativeLayout>